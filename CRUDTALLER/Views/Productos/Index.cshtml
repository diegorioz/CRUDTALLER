@model IEnumerable<SalesManagementApp.Models.Producto>

@{
    ViewData["Title"] = "Productos";
}

<h1 class="mb-4">Gestión de Productos</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">➕ Crear Nuevo Producto</a>
</p>

<table class="table table-striped table-bordered align-middle text-center">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stock)
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                <td>@string.Format("{0:C}", item.Precio)</td>
                <td>@Html.DisplayFor(modelItem => item.Stock)</td>
                <td>
                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.ProductoId">✏️ Editar</a>
                    <a class="btn btn-sm btn-info text-white" asp-action="Details" asp-route-id="@item.ProductoId">🔎 Detalles</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.ProductoId">🗑 Eliminar</a>
                    <a class="btn btn-sm btn-success" asp-action="AgregarAlCarrito" asp-route-id="@item.ProductoId">🛒 Agregar</a>
                </td>
            </tr>
        }
    </tbody>
</table>